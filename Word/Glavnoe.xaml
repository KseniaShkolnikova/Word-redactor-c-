<Window x:Class="Word.Glavnoe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Word"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Почти лучшая почта" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="25"/>
        <Button Content="Создать Word документ" Grid.Row="1" Click="Button_Click"/>
        <Button Content="Открыть Word документ" Grid.Row="2" Click="Button_Click_1"/>
        <Button x:Name="CreateExelBtm" Content="Создать Exel документ" Grid.Row="3" Click="Button_Click"/>
        <Button x:Name="OpenExelBtm" Content="Открыть Exel документ" Grid.Row="4" Click="OpenExelBtm_Click" />
    </Grid>
</Window>